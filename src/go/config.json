{
  "name": "Frank The Bot",
  "configs": {
    "google_api_key": "",
    "record_silence_params": "-l 1 0.2 2% 1 0.2 2%"
  },
  "deactivation": ["spegniti", "stai zitto", "stai zitto quando parli con me"],
  "devices": [{
    "name": "livingroom-light",
    "type": "firmata",
    "connection": {
      "type": "tcp",
      "address": "192.168.1.7:3030"
    },
    "interfaces": [{
      "name": "blueled",
      "driver": "led",
      "pin": "12"
      
    },{
      "name": "greenled",
      "driver": "led",
      "pin": "14"
    }, {
      "name": "whiteled",
      "driver": "led",
      "pin": "2"
    }]
    }],
    "commands": [{
      "name": "Livinglight on",
      "commands": ["accendi la luce della sala", "accendi la sala", "accendi la luce del salotto", "illumina la sala"],
      "actions": [{
        "device": "livingroom-light",
        "interface": "blueled",
        "action": "on"
      }]
      }, {
      "name": "light off",
      "commands": ["spegni la luce della sala", "spegni la sala", "spegni la luce del salotto"],
      "actions": [{
        "device": "livingroom-light",
        "interface": "blueled",
        "action": "off"
      }]
    }, {
      "name": "start music",
      "commands": ["musica anni {anni}"],
      "actions": [{
        "device": "radio",
        "interface": "bla",
        "action": "start radio {anni}"
      }]
    }, {
      "name": "light off Special",
      "commands": ["spegni la luce {colore}"],
      "actions": [{
        "device": "livingroom-light",
        "matchingInterface": {
          "colore": {
            "blu": "blueled",
            "verde": "greenled",
            "bianca": "whiteled"
          }
        },
        "action": "off"
      }]
    }, {
      "name": "light on Special",
      "commands": ["accendi la luce {colore}"],
      "actions": [{
        "device": "livingroom-light",
        "matchingInterface": {
          "colore": {
            "blu": "blueled",
            "verde": "greenled",
            "bianca": "whiteled"
          }
        },
        "action": "on"
      }]
    }
    ]
}
